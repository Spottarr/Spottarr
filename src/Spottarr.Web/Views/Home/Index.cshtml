@model Spottarr.Web.Controllers.Stats;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Spottarr</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<main id="main">
    <div id="content">
        <img src="logo.svg" width="200" height="200" alt="Spottarr"/>
        <h1>Spottarr</h1>
        <a class="btn" href="/newznab/api?t=caps">Newznab API</a>
        <p class="stats">Spots indexed: @Model.SpotCount</p>
        <p class="stats">Version: @Model.Version</p>
    </div>
</main>
</body>
</html>